<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true">

        <!--中间布局-->
        <RelativeLayout
            android:id="@+id/fragment_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/userTitleBar"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/blue">

                <ImageView
                    android:id="@+id/leftmenu"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:padding="2dp"
                    android:src="@drawable/user_im"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="爱单词"
                    android:textSize="20dp"
                    android:textColor="@android:color/white"/>

            </RelativeLayout>

            <android.support.percent.PercentRelativeLayout
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/userTitleBar"
                android:orientation="vertical">
            <Button
                android:text="开始我的复习"
                android:id="@+id/review_bt"
                app:layout_marginLeftPercent="25%"
                app:layout_marginTopPercent="50%"
                app:layout_widthPercent="50%"
                app:layout_heightPercent="26%"
                android:background="@drawable/bt1"
                />
            <Button
                android:text="制定我的学习计划"
                android:id="@+id/mkplan_bt"
                app:layout_marginLeftPercent="25%"
                app:layout_marginTopPercent="10%"
                app:layout_widthPercent="50%"
                app:layout_heightPercent="26%"
                android:background="@drawable/bt1"
                />
            <Button
                android:text="四级词库"
                android:id="@+id/lv4_bt"
                app:layout_marginLeftPercent="10%"
                app:layout_marginTopPercent="35.2%"
                app:layout_widthPercent="30%"
                app:layout_heightPercent="15.6%"
                android:background="@drawable/bt1"
                android:visibility="invisible"
                />
            <Button
                android:text="六级词库"
                android:id="@+id/lv6_bt"
                app:layout_marginLeftPercent="60%"
                app:layout_marginTopPercent="35.2%"
                app:layout_widthPercent="30%"
                app:layout_heightPercent="15.6%"
                android:background="@drawable/bt1"
                android:visibility="invisible"
                />
            <Button
                android:text="标记词集"
                android:id="@+id/signWord_bt"
                app:layout_marginLeftPercent="10%"
                app:layout_marginTopPercent="35.2%"
                app:layout_widthPercent="30%"
                app:layout_heightPercent="15.6%"
                android:background="@drawable/bt1"
                android:visibility="invisible"
                />
            <Button
                android:text="错误词集"
                android:id="@+id/wrongWord_bt"
                app:layout_marginLeftPercent="60%"
                app:layout_marginTopPercent="35.2%"
                app:layout_widthPercent="30%"
                app:layout_heightPercent="15.6%"
                android:background="@drawable/bt1"
                android:visibility="invisible"
                />
            </android.support.percent.PercentRelativeLayout>
        </RelativeLayout>
        <!--侧边栏布局-->
        <RelativeLayout
            android:id="@+id/left"
            android:layout_alignParentTop="true"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:background="@android:color/white">

            <!--这里通过listview放其他控件-->
            <ListView
                android:id="@+id/listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </ListView>
        </RelativeLayout>
</android.support.v4.widget.DrawerLayout>
